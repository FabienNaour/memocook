
  <div class="navbar-wagon navbar-background ">


    <%= link_to root_path, class: "navbar-wagon-brand" do %>
      <%= image_tag "recette.png", height: 50 %>
    <% end %>



   <% if user_signed_in? %>
      <div class="navbar-wagon-logo">
        <h3>Memo<strong>Cook</strong></h3>
      </div>

    <% else%>
      <div class="navbar-wagon-flag " >
        <a href="/fr"><%= image_tag "fr.svg", height: 30 %></a>
      </div>
      <div class="navbar-wagon-flag " >
        <a href="/en"><%= image_tag "gb.svg", height: 30 %></a>
      </div>
    <% end %>
    <!-- Right Navigation -->
    <div class="navbar-wagon-right hidden-xs hidden-sm">

      <% if user_signed_in? %>


        <div class="navbar-wagon-item">
          <div class="dropdown">
            <%= link_to "#", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" do %>
              <i class="fas fa-user-circle" style="font-size:35px;"></i>
            <% end %>
            <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
              <li>
                <%= link_to edit_user_registration_path do %>
                  <i class="fa fa-user"></i> <%= t("profile") %>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa fa-sign-out-alt"></i>  <%= t("sign_out") %>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      <% else %>
        <!-- Login link (when logged out) -->
        <%= link_to new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" do %>
           <i class="fa fa-sign-in-alt"></i> <%= t("sign_in") %>
        <% end %>
      <% end %>
    </div>

    <!-- Dropdown list appearing on mobile only -->

    <div class="navbar-wagon-item hidden-md hidden-lg">
      <div class="dropdown">
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <% if user_signed_in? %>
           <li>
              <%= link_to edit_user_registration_path do %>
                <i class="fa fa-user"></i> <%= t("profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out-alt"></i>  <%= t("sign_out") %>
              <% end %>
            </li>
          <% else %>
            <li>
              <%= link_to new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" do %>
                 <i class="fa fa-sign-in-alt"></i> <%= t("sign_in") %>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>






