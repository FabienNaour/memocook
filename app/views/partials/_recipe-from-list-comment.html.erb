<div class="modal fade" id="myModal<%= recipe.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="button-custo btn-block" data-dismiss="modal">Close</button>
      </div>
      <div class="modal-body">

<%= recipe.description %>
<%= cl_image_tag recipe.photo, height: 300, width: 400, crop: :fill %>


      </div>
    </div>
  </div>
</div>
