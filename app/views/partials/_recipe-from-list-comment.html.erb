<div class="modal fade" id="myModal<%= recipe.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="button-custo btn-block" data-dismiss="modal">Close</button>

        <% if  recipe.friends.length > 0 %>
         <%="Ont goutÃ©: "  %>
          <% recipe.friends.each_with_index do |friend,index|  %>
            <%= "#{friend.name}."  %>
          <% end  %>
         <% end  %>
      </div>
      <div class="modal-body modal-body-custo">
        <div class="modal-description"><%= recipe.description %>
        </div>
          <% if recipe.photoexist  %>
            <%= cl_image_tag recipe.photo, height: 600, width: 350, crop: :fill %>
          <% end %>

      </div>
    </div>
  </div>
</div>
