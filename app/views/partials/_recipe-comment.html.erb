<div class="modal fade" id="myModal<%= reception.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="button-custo btn-block" data-dismiss="modal">Close</button>

        <div class="modal-decription"><%= reception.recipe.description %>
        </div>
      </div>
      <div class="modal-body modal-body-custo">


<% if reception.recipe.photo != "" %>
  <%= cl_image_tag reception.recipe.photo, height: 600, width: 400, crop: :fill %>
<% end %>

      </div>
    </div>
  </div>
</div>
