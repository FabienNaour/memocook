




<div class="container ">
  <% if @recipes.length == 0 %>

    <div class="text-white "><%=t('.no_recipes_html') %>
    </div>

  <% else %>
    <div class="row">
    <div class="col-xs-12 col-sm-offset-5 col-sm-6 ">
      <div class="text-white-titre"> <h2> <%= t('.title') %></h2></div>
    </div>

  </div>

    <div class="div cadre">
      <div class="row">

        <%= render 'partials/recipe-from-list' %>

        <% @recipes.each do |recipe| %>
<!-- Marmiton or 750gr -->
<% if recipe.link != "" %>

          <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">

            <a class="iframemodal" href="#myModal"  data-value="<%=recipe.link%>">
                <div class="card-test ">
                  <div class=" card-profile-test">

                    <div class="card-avatar-test">
                      <img class="img" src="<%=recipe.image %>">
                    </div>

                    <div class="card-description-test">
                      <% str = recipe.name %>
                      <h2><%= str.length > 29 ? str[0...29] + "..." : str[0...29] %></h2>
                    </div>

                    <div class="card-how-many-test">
                      <%="cooked #{recipe.receptions.count} time(s)" %>
                    </div>

                    <div class="card-user-test">
                      <% if recipe.logo == "M"%>
                      <%= image_tag "marmiton.png", height: 30 %>
                      <% elsif recipe.logo == "750" %>
                      <%= image_tag "750g.png", height: 20 %>
                      <% else  %>
                      <%= image_tag "topchef.jpg", height: 20 %>
                      <% end %>
                    </div>

                  </div>
                </div>
            </a>

              <div class="card-button-test">
                 <%= link_to recipe_path(recipe.id), method: :delete, data: { confirm: t('confirm_delete') } do %>
                    <i class="fas fa-minus-circle btn-minus" ></i>
                   <% end %>
              </div>
          </div>
<% else %>
<!-- Recette perso -->
<%= render 'partials/recipe-from-list-comment', recipe: recipe %>
<div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">

  <a data-toggle="modal" href="#myModal<%= recipe.id %>">


    <div class="card-test">
      <div class=" card-profile-test" >
        <div class="card-description-test">
          <div class="card-avatar-test1">

          </div>
          <% str = recipe.name %>
          <h2><%= str.length > 29 ? str[0...29] + "..." : str[0...29] %></h2>
        </div>

        <div class="card-how-many-test">
          <%="cooked #{recipe.receptions.count} time(s)" %>
        </div>

        <div class="card-user-test">
          <% if recipe.logo == "M"%>
          <%= image_tag "marmiton.png", height: 30 %>
          <% elsif recipe.logo == "750" %>
          <%= image_tag "750g.png", height: 20 %>
          <% else  %>
          <%= image_tag "topchef.jpg", height: 20 %>
          <% end %>
        </div>

      </div>
    </div>
  </a>

     <div class="card-button-test">
         <%= link_to recipe_path(recipe.id), method: :delete, data: { confirm: t('confirm_delete') } do %>
            <i class="fas fa-minus-circle btn-minus" ></i>
          <% end %>
      </div>




        <%= render 'partials/modal-delete' , recipe: recipe%>

        <button type="button" class="btn btn-outline-danger"
             data-toggle="modal" data-target="#deleteModal">
          Delete
        </button>


        <%= link_to recipe_path(recipe.id), method: :delete, data: {toggle: "modal", target: "#deleteModal"} do %>
          <i class="fa fa-plus-circle btn-plus"  ></i>
            <% end %>

</div>
<% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="row">
