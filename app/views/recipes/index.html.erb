        <%= link_to root_path, class: " button-fleche-width  " do %>
        <i class="fas fa-angle-double-left" style="font-size:30px;color:#000000"></i>
        <% end %>
    </div> -->
    <div class="col-xs-5 col-sm-6" >
        <%= link_to new_recipe_path do %>
          <i class="fa fa-plus-circle btn-plus"  ></i>
          <% end %>
    </div>
 </div>


</div>












