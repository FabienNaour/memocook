<div class="container ">
  <% if @suggestions.length == 0 %>
   <div class="text-white">Sorry, no result for <%=@search_recipe%> </div>
  <% else %>

  <div class="div cadre">
    <div class="row">
      <% @suggestions.each do |suggestion| %>
      <%= render 'partials/modal-recipe', suggestion:  suggestion %>
      <div class="col-xs-12 col-sm-6 col-lg-4">
<%= raise %>
        <a href="#" data-toggle="modal" data-target="#myModal<%= suggestion.object_id  %>">

          <div class="card-recipe" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%=suggestion[:picture]%>');">
            <div class="card-description-recipe">
              <% str = suggestion[:name]%>
              <h2><%= str.length > 35 ? str[0...35]+"..." : str[0...35] %></h2>
            </div>
            <div class="card-user">
              <% if suggestion[:logo] == "M"%>
                <%= image_tag "marmiton.png", height: 30 %>
              <% else %>
                <%= image_tag "750g.png", height: 20 %>
              <% end %>
            </div>
            <%= link_to recipes_path, class: " btn-medium card-button-recipe-add " do %>
            <i class="fas fa-plus"></i>
            <% end %>
          </div>
        </a>
      </div>
      <% end %>
    </div>
  </div>
  <% end %>
  <div class="row">
    <div class="col-xs-2 col-md-1">
      <div class="icons-size">
        <%= link_to recipes_path, class: "button-memo button-fleche-width  " do %>
        <i class="fas fa-angle-double-left"></i>
        <% end %>
      </div>
    </div>
  </div>

</div>





